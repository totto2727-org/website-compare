{
  "$schema": "https://biomejs.dev/schemas/1.4.0/schema.json",
  "files": {
    "include": ["*.*ts", "**/*.*ts", "**/*.tsx", "*.json"],
    "ignore": ["dist"]
  },
 	"organizeImports": {
		"enabled": true
	},
  "linter": {
    "enabled": true,
    "rules": {
      "all": true
    }
  },
  "formatter": {
    "indentStyle": "space"
  }
}
